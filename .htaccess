<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # 1. EXACT MATCH for this job (temporary for testing)
    RewriteRule ^jobs/full-stack-developer/?$ /jobs/full-stack-developer.html [L,NC]
    
    # 2. General job URL pattern (for future jobs)
    RewriteRule ^jobs/([a-z0-9-]+)/?$ /jobs/$1.html [L,NC]
    
    # 3. Force HTTPS
    RewriteCond %{HTTPS} off
    RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]
</IfModule>