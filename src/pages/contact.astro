---
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout title="Contact Us | Nexus Engineering & Planning Ltd.">
    <section class="hero">
        <div class="container">
            <h1>Contact Nexus</h1>
            <p>Let's build better futures together.</p>
        </div>
    </section>

    <section class="contact-page">
        <div class="container">
            <div class="contact-grid">
                <div class="contact-form-container">
                    <h2 class="section-title" style="text-align: left;">Send Us a Message</h2>
                    <form id="contactForm" action="/sendmail.php" method="POST" class="contact-form">
                        <div class="form-group">
                            <label for="name">Your Name</label>
                            <input type="text" id="name" name="name" required />
                        </div>
                        <div class="form-group">
                            <label for="email">Your Email</label>
                            <input type="email" id="email" name="email" required />
                        </div>
                        <div class="form-group">
                            <label for="message">Your Message</label>
                            <textarea id="message" name="message" rows="5" required></textarea>
                        </div>
                        <div class="g-recaptcha" data-sitekey="6LfFKQMrAAAAADo1jSQ8JKTG25CUz2eQpAHyiaPn" style="margin-bottom: 1.5rem;"></div>
                        <button type="submit" class="btn-primary">Send Message</button>
                    </form>
                </div>
                <div class="contact-info-container">
                    <div class="contact-info-box">
                        <h3>Contact Information</h3>
                        <p><span class="icon">📧</span> <a href="mailto:support@nexuseng.org">support@nexuseng.org</a></p>
                        <p><span class="icon">📍</span> Lagos, Nigeria</p>
                    </div>
                    <div class="contact-map">
                        <iframe 
                          src="https://www.openstreetmap.org/export/embed.html?bbox=3.449060%2C6.426666%2C3.469060%2C6.446666&amp;layer=mapnik&amp;marker=6.436666%2C3.459060"
                          style="border:0; border-radius: var(--border-radius);" width="100%" height="100%" allowfullscreen="" loading="lazy">
                        </iframe>
                    </div>
                </div>
            </div>
        </div>
    </section>
</BaseLayout>
